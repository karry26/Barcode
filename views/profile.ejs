                            <input  type="date"  class="form-control" name="dob" id="dob" aria-describedby="emailHelp" placeholder="d.o.b." value="<%=user.dob%>" >
                           
                       </div>
                        
                    </div>
                </div>

                
                 <div class="form-row">
                    <div class="col-md-6">
